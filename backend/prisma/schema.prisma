// Modelo de usuario con roles
model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  rol       Rol      @default(USER)
  // otros campos...

  @@map("Usuarios")
}

enum Rol {
  USER
  ADMIN
  MASTERADMIN
  SUPERADMIN
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Modelo y DTO en español, tabla mapeada a “Categorias”
model Categoria {
  id     Int    @id @default(autoincrement())
  nombre String

  // Mapea este modelo a la tabla "Categorias" en la BD
  @@map("Categorias")
}
